class Main {
    public static void main(String[] args) {
int num1=36,num2=60;

int c = gethcf(num1,num2);
int lcm=num1*num2/c;
System.out.println("the hcf is:"+c);
System.out.println("the lcm is:"+lcm);
    }
    public static int gethcf(int num1,int num2){
       if( num2 == 0){
           return num1;
       }
        return gethcf(num2,num1%num2);
    
}
}
